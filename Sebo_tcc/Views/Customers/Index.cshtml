@model IEnumerable<CustomerModel>


<div class="container">
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        Lista de clientes
    </div>
        <div class="d-flex justify-content-end mb-3">
            <a class="btn btn-outline-success btn-sm" asp-controller="Customers" asp-action="Create">Cadastrar cliente</a>
        </div>
    

    <div class="card-body">
        <table id="datatablesBook">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>CPF</th>
                    <th>Data nascimento</th>
                    <th>Numero</th>
                    <th>Ações</th>
                    
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Nome</th>
                    <th>CPF</th>
                    <th>Data nascimento</th>
                    <th>Numero</th>
                    <th>Ações</th>

                    
                </tr>
            </tfoot>
            <tbody>
                @foreach (var customer in Model)
                {
                    <tr>
                        <td>@customer.Name </td>
                        <td>@customer.CPFCustomer </td>
                        <td>@customer.BirthDate.ToString("dd/MM/yyyy") </td>
                        <td>@customer.NumberCustomer </td>
                        <td style="white-space:nowrap">
                                <a class="btn btn-primary" asp-controller="Customers" asp-action="Edit" asp-route-id="@customer.Id">Editar</a>
                                <a class="btn btn-danger" asp-controller="Customers" asp-action="Delete" asp-route-id="@customer.Id">Apagar</a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
</div>
